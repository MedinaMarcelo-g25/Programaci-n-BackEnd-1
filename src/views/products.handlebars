<div class="container mt-4">
  <h1 class="mb-4 text-center">Productos</h1>
  <div class="row">
    {{#each products}}
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow">
          <img src="/img/products/{{this.thumbnail}}" 
               alt="{{this.title}}" 
               onerror="this.src='/img/placeholder.jpg'"
               class="card-img-top product-img">
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text"><strong>Precio:</strong> ${{this.price}}</p>
            <div class="product-actions">
              <button class="add-cart-btn" onclick="addToCart('{{this._id}}')">Agregar al carrito</button>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
<script>
async function addToCart(productId) {
    try {
        const response = await fetch(`/api/cart/products/${productId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            credentials: 'same-origin',
            body: JSON.stringify({ quantity: 1 })
        });

        const data = await response.json();
        
        if (response.ok) {
            alert('Producto agregado al carrito');
        } else {
            throw new Error(data.message || 'Error al agregar al carrito');
        }
    } catch (error) {
        console.error('Error:', error);
        alert(error.message);
    }
}
</script>