<div class="container mt-4">
  <h1 class="mb-4 text-center">Productos</h1>
  <div class="row">
    {{#each products}}
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow">
          <img src="{{this.thumbnails.[0]}}" class="card-img-top" alt="{{this.title}}" onerror="this.src='https://via.placeholder.com/300x200?text=Sin+Imagen'">
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text"><strong>Precio:</strong> ${{this.price}}</p>
            <div class="product-actions">
              <button class="add-cart-btn" onclick="addToCart('{{this._id}}')">Agregar al carrito</button>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
<script>
function addToCart(productId) {
  alert('Producto agregado al carrito: ' + productId);
}
</script>