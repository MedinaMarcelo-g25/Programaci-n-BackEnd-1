<div class="form-container fade-in">
    <h2 class="text-center mb-4"><i class="fas fa-sign-in-alt"></i> Iniciar Sesión</h2>
    
    <div id="loginAlert" class="alert alert-danger d-none" role="alert"></div>
    
    <form id="loginForm" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Contraseña</label>
            <input type="password" class="form-control" id="password" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">
            Ingresar <i class="fas fa-arrow-right ms-2"></i>
        </button>
    </form>
    <div class="text-center mt-4">
        <p class="text-muted">¿No tienes cuenta? 
            <a href="/register" class="text-primary">Regístrate aquí</a>
        </p>
    </div>
</div>

<script>
document.getElementById('loginForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const alertDiv = document.getElementById('loginAlert');
    alertDiv.classList.add('d-none');
    
    try {
        const res = await fetch('/api/sessions/login', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                email: document.getElementById('email').value,
                password: document.getElementById('password').value
            })
        });

        const data = await res.json();
        
        if (data.status === 'success' && data.token) {
            localStorage.setItem('token', data.token);
            window.location.href = '/profile';
        } else {
            throw new Error(data.message || 'Error al iniciar sesión');
        }
    } catch (error) {
        alertDiv.textContent = error.message;
        alertDiv.classList.remove('d-none');
    }
});
</script>